package ui;

import java.io.IOException;

import entity.RegisteredUser;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.ListView;
import javafx.scene.control.TextField;
import javafx.scene.layout.AnchorPane;

public class AdminController {

    @FXML
    private AnchorPane anchor;

    @FXML
    private ListView<?> articleList;

    @FXML
    private Button loginBTN;

    @FXML
    private TextField userTF;

    @FXML
    private TextField passTF;

    @FXML
    private Label welcomeLB;

    @FXML
    private Label dailyLB;

    @FXML
    private Button createBTN;

    Main main = new Main();
    
    @FXML
    void createAcc(ActionEvent event) {
    	String user = userTF.getText();
    	String pass = passTF.getText();
    	
    	if (user != null && pass != null) //TODO check from json file
    	{
    		RegisteredUser ru = new RegisteredUser(user,pass);
    		
    		//TODO serialize it into the user json
    	}
    	
    }

    @FXML
    void logout(ActionEvent event) throws IOException {
    	main.changeScene("generalview.fxml");
    }

}
